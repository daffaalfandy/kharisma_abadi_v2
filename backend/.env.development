# =====================================================
# Kharisma Abadi Backend - Development Environment
# =====================================================

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug

# Server
HOST=0.0.0.0
PORT=8000

# Database
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=kharisma_db
DB_USER=kharisma
DB_PASSWORD=password
DB_ROOT_PASSWORD=rootpassword

DATABASE_URL=mysql://kharisma:password@localhost:3306/kharisma_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Security (not critical for development)
JWT_SECRET=dev-secret-key-not-for-production-change-before-using-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24  # Longer for development
BCRYPT_COST=10  # Lower for faster development testing

# CORS (allow localhost development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# External services (use local implementations)
SMS_PROVIDER=local
PAYMENT_PROVIDER=local

# File upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# Logging
LOG_FILE=./logs/app.log

# Rate limiting (relaxed for development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000

# Feature flags (all enabled in development)
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_PAYMENT_GATEWAY=false
FEATURE_REPORTS_EXPORT=true

# Development features
AUTO_SEED_DATABASE=false
