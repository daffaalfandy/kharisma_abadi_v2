# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Universal settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript, JSON, CSS
[*.{js,jsx,ts,tsx,json,css,scss,vue}]
indent_style = space
indent_size = 2
max_line_length = 100

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Markdown and YAML
[*.{md,yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4
