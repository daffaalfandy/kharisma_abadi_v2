# Kharisma Abadi Frontend - Development Environment Variables
# Used when running: npm run dev

# ============================================================================
# API Configuration
# ============================================================================

# Backend API base URL for development
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# API timeout (30 seconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================================================
# Application Configuration
# ============================================================================

# Application name
NEXT_PUBLIC_APP_NAME=Kharisma Abadi (Dev)

# Current environment
NEXT_PUBLIC_ENVIRONMENT=development

# Enable debug logging for development
NEXT_PUBLIC_DEBUG=true

# ============================================================================
# Feature Flags - All Enabled for Testing
# ============================================================================

# Enable all features for comprehensive testing
NEXT_PUBLIC_FEATURE_SMS=true
NEXT_PUBLIC_FEATURE_REPORTS=true
NEXT_PUBLIC_FEATURE_ADVANCED_FILTERS=true
NEXT_PUBLIC_FEATURE_CUSTOMER_MGMT=true

# ============================================================================
# UI Configuration
# ============================================================================

# Items per page
NEXT_PUBLIC_ITEMS_PER_PAGE=10

# Enable experimental features for testing
NEXT_PUBLIC_EXPERIMENTAL_FEATURES=true

# ============================================================================
# Analytics - Disabled in Development
# ============================================================================

# No analytics in development
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_SENTRY_DSN=

# ============================================================================
# Server-Side Only
# ============================================================================

# Local backend API URL for server-side requests
API_SECRET_URL=http://backend:8000/api/v1

# Use localStorage for token storage
TOKEN_STORAGE=localStorage

# CORS enabled
CORS_ENABLED=true

# ============================================================================
# Development Tools - All Enabled
# ============================================================================

# Enable detailed logging
ENABLE_REQUEST_LOGGING=true
ENABLE_QUERY_LOGGING=true

# Disable API mocking (use real backend)
MOCK_API=false

# ============================================================================
# Security - Development Mode (Relaxed)
# ============================================================================

# Log CSP violations only, don't enforce
CSP_REPORT_ONLY=true

# Test security headers
SECURITY_HEADERS_TEST=true

# ============================================================================
# Hot Reload (Next.js Auto-Enabled)
# ============================================================================

# Next.js automatically enables fast refresh in development
# No configuration needed - npm run dev handles this
