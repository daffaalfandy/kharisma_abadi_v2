# Kharisma Abadi Frontend - Local Environment Variables
# Copy this file to .env.local and fill in the values
# DO NOT commit .env.local to version control

# ============================================================================
# API Configuration
# ============================================================================

# Backend API base URL (without trailing slash)
# Development: http://localhost:8000/api/v1
# Production: /api/v1 (relative URL, served behind reverse proxy)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================================================
# Application Configuration
# ============================================================================

# Application name displayed in header
NEXT_PUBLIC_APP_NAME=Kharisma Abadi

# Current environment (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT=development

# Enable debug logging in console
NEXT_PUBLIC_DEBUG=true

# ============================================================================
# Feature Flags
# ============================================================================

# Enable SMS notifications
NEXT_PUBLIC_FEATURE_SMS=true

# Enable report export functionality
NEXT_PUBLIC_FEATURE_REPORTS=true

# Enable advanced filters
NEXT_PUBLIC_FEATURE_ADVANCED_FILTERS=true

# Enable customer management
NEXT_PUBLIC_FEATURE_CUSTOMER_MGMT=true

# ============================================================================
# UI Configuration
# ============================================================================

# Items per page in list views
NEXT_PUBLIC_ITEMS_PER_PAGE=10

# Enable experimental features
NEXT_PUBLIC_EXPERIMENTAL_FEATURES=false

# ============================================================================
# Analytics (Optional)
# ============================================================================

# Google Analytics ID (leave empty if not using)
NEXT_PUBLIC_GA_ID=

# Sentry DSN for error tracking (leave empty if not using)
NEXT_PUBLIC_SENTRY_DSN=

# ============================================================================
# Server-Side Only (not public)
# ============================================================================

# Backend API URL for server-side requests (no NEXT_PUBLIC_ prefix)
# This is used for API calls from Next.js API routes
API_SECRET_URL=http://localhost:8000/api/v1

# JWT token storage location (localStorage or sessionStorage)
TOKEN_STORAGE=localStorage

# CORS enabled
CORS_ENABLED=true

# ============================================================================
# Development Tools
# ============================================================================

# Enable request/response logging
ENABLE_REQUEST_LOGGING=true

# Enable query logging
ENABLE_QUERY_LOGGING=true

# Mock API responses (for testing without backend)
MOCK_API=false

# ============================================================================
# Security (Development Only)
# ============================================================================

# WARNING: These are for development only. Never use in production.
# CSP (Content Security Policy) violations - log only (not enforced)
CSP_REPORT_ONLY=true

# Security headers test mode
SECURITY_HEADERS_TEST=false
